<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Blog a Blogging Category Flat Bootstarp  Responsive Website Template | Single :: w3layouts</title>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />

    <!---->

</head>
<body>
    <!---header---->
    <div class="header">
        <div class="container">
            <!---start-top-nav---->
            <div class="clearfix"></div>
            <!---//End-top-nav---->
        </div>
    </div>
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <style>
                    .sayfa-numarasi {
                        display: inline-block;
                        padding: 1px;
                        background-color: #fff;
                        margin-right: 5px;
                    }
                </style>



                @foreach (var x in Model.Deger1)
                {

                    <div class="single-grid">
                        <img src="@x.BlogImage" alt="" style="margin-bottom:20px" />
                        <a href="/Blog/BlogDetay/@x.Id">@x.Baslik'</a>
                        <p>
                            @x.Aciklama.Substring(0, 150)...
                        </p>
                        <br /><br />
                    </div>

                }

            </div>





            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>Son Bloglar</h3>
                    @foreach (var y in Model.Deger3)
                    {
                        <ul>
                            <li><a href="/Blog/BlogDetay/@y.Id">@y.Baslik</a></li>
                        </ul>
                    }
                </div>
                <div class="comments">
                    <h3>Son Yorumlar</h3>
                    @foreach (var y in Model.Deger2)
                    {

                        <ul>
                            <li><a href="/Blog/BlogDetay/@y.Blog.Id">@y.KullaniciAdi </a> on <a href="/Blog/BlogDetay/@y.Blog.Id">@y.Blog.Baslik</a></li>

                        </ul>


                    }
                </div>
            </div>



            <div class="clearfix"></div>
        </div>
    </div>
    <div style="text-align:center">
        @Html.PagedListPager((IPagedList)Model.Deger1, sayfa => Url.Action("Index", new { sayfa }))

    </div>
</body>
</html>

