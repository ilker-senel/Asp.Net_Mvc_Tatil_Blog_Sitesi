@model TravelTripProje.Models.Sınıflar.Hakkimizda
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string aciklama = Model.Aciklama;
}

<h2>Hakkimizda Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("HakkimizdaGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.FotoUrl)
    @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, 15, 1, new { @class = "form-control" })
    @*<textarea name="Aciklama" , rows="15" cols="50" class="form-control">@aciklama.Replace(Environment.NewLine, "<br>")</textarea>*@
    <br />
    <button class="btn btn-success">Güncelle</button>
    <br />





}

